<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Tommy.Extensions</PackageId>
        <AssemblyTitle>Tommy.Extensions</AssemblyTitle>
        <Product>Tommy.Extensions</Product>
        <TargetFrameworks>net35;netstandard2.0</TargetFrameworks>
        <LangVersion>9</LangVersion>
        <Copyright>Copyright Â© 2021 Denis Zhidkikh</Copyright>
        <Version>2.0.0</Version>
        <Authors>Denis Zhidkikh</Authors>
        <PackageTags>TOML,parser,writer,simple,extension</PackageTags>
        <Description>
            Extensions for Tommy to allow higher level access to TOML parser and writer.
        </Description>
        <PackageIcon>tommy_logo_icon.png</PackageIcon>
        <PackageIconUrl>https://raw.githubusercontent.com/dezhidki/Tommy/master/logos/tommy_logo_icon.png</PackageIconUrl>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageProjectUrl>https://github.com/dezhidki/Tommy</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Tommy\Tommy.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\LICENSE" Pack="true" PackagePath="" />
        <None Include="..\logos\tommy_logo_icon.png" Pack="true" Visible="false" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="jnm2.ReferenceAssemblies.net35" Version="1.0.1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

</Project>
